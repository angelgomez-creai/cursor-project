# ============================================
# Production Environment Variables Template
# ============================================
# 
# IMPORTANT: Do NOT commit this file with real values!
# This is a template for production configuration.
# Configure these in AWS ECS Task Definition or AWS Secrets Manager.
#
# ============================================

# Database Configuration
# ============================================
DATABASE_URL=postgresql://app_user:secure_password@prod-db.region.rds.amazonaws.com:5432/ecommerce_db

# Redis Configuration
# ============================================
REDIS_URL=redis://prod-redis.region.cache.amazonaws.com:6379
# Or with SSL:
# REDIS_URL=rediss://prod-redis.region.cache.amazonaws.com:6379

# JWT Security
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars-long
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-min-32-chars-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
# ============================================
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# API Configuration
# ============================================
API_TITLE=E-commerce API
API_DESCRIPTION=Clean Architecture E-commerce API
API_VERSION=1.0.0

# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://ecommerce.com,https://www.ecommerce.com,https://admin.ecommerce.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=*

# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Frontend URLs
# ============================================
FRONTEND_URL=https://ecommerce.com
FRONTEND_STAGING_URL=https://staging.ecommerce.com

# Security Headers
# ============================================
SECURE_COOKIES=true
SESSION_SECRET=your-session-secret-key-min-32-chars-long

